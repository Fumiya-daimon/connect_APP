<div class="sign-up page">
  <div class="card-file">
    <div class="card-header">
      <h2>新規登録</h2>
    </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :birthday %>
          <%= f.date_select :birthday,
                  start_year: 1930,
                  end_year: (Time.now.year - 18),
                  default: Date.new(1989, 1, 1) %>
        </div>

        <div class="btn-group btn-group-toggle" data-toggle="buttons">
          <label class="btn btn-light flex-fill mr-2 active">
            <%= f.radio_button :gender, :man, class: "form-check-input" %>
            <label class="form-check-label">男性</label>
          </label>
          <label class="btn btn-light flex-fill">
            <%= f.radio_button :gender, :woman, class: "form-check-input" %>
            <label class="form-check-label">女性</label>
          </label>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上で表記してください。)</em>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image %>
        </div>

        <div class="form-group">
          <%= f.label :skill %>
          <%= f.select(:skill, ["主体性", "課題解決能力","客観性","計画力","想像力","傾聴力"], {include_blank: '選択ボックス'}) %>
        </div>

        <div class="form-group">
          <%= f.label :job %>
          <%= f.select(:job, ["自動車", "航空","建設機械","工作機械","ロボット","プラント・エンジニアリング","鉄道","電子部品","半導体","総合電機","パソコン","IT","インフラ","銀行","保険","証券","クレジットカード","食品","医薬品","ゲーム","旅行","エンタメ","広告","建設","不動産","商社","教育","飲食"], {include_blank: '選択ボックス'}) %>
        </div>

        <div class="sign-up">
          <%= f.submit "登録する", class: "btn btn-primary text-white" %>
        </div>
      <% end %>
    </div>
    <div class="mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>