<h1>こんにちは、<%= current_company.name %>さん</h1>
<p>MyPage</p>
<p>投稿一覧</p>
<table class="table table-hover boards__table">
  <thead class="thead-dark">
    <tr>
      <th>タイトル</th>
      <th>内容</th>
    </tr>
  </thead>
  <tbody>
  <% @company.company_posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<h2>求人一覧</h2>
<table class="table table-hover boards__table">
  <thead class="thead-dark">
    <tr>
      <th>タイトル</th>
      <th>求める人物像</th>
      <th>内容</th>
    </tr>
  </thead>
  <tbody>
    <% @company.companyrequired_posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.required_person %></td>
        <td><%= post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>