<% if flash[:error_messages] %>
  <div class="alert alert-danger">
    <ul>
      <% flash[:error_messages].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: companyrequired_post, local: true)  do |f| %>
<form>
  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :required_person, '求める人物像' %>
    <%= f.text_field :required_person, class: 'form-control', rows: 30 %>
  </div>
  <div class="form-group">
    <%= f.label :content, '本文' %>
    <%= f.text_field :content, class: 'form-control', rows: 30 %>
  </div>
    <%= f.hidden_field :company_id %>
  <%= f.submit '保存', class: 'btn btn-primary' %>
<% end %>