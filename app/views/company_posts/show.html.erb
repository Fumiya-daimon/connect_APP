<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto boards__linkBox">
    <%= link_to '一覧', company_posts_path, class: 'btn btn-outline-dark' %>
    <%= link_to '編集', edit_company_post_path(@company_post), class: 'btn btn-outline-dark' %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>

<div class="card">
  <div class="card-header">
    <h4><%= @company_post.title %></h4>
  </div>

  <div class="card-body">
    <p class="card-text"><%= simple_format(@company_post.content) %></p>
  </div>
</div>